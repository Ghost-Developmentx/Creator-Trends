{
  "name": "user-service",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-docs && npm run verify-build",
    "migrate": "sequelize-cli db:migrate",
    "copy-docs": "cross-env node copy-docs.js",
    "start": "node dist/server.js",
    "seed": "sequelize-cli db:seed:all",
    "test": "cross-env NODE_ENV=test jest --config jest.config.ts",
    "test:docker": "docker-compose run --rm test",
    "deploy": "./deploy.sh",
    "clean": "rimraf dist && mkdirp dist",
    "verify-build": "node verifyBuild.js",
    "switch:local": "cross-env node switch-env.js local",
    "switch:docker": "node switch-env.js docker",
    "start:local": "cross-env npm run switch:local && npm run build && node dist/server.js",
    "start:docker": "npm run switch:docker && docker-compose up -d --build",
    "migrate:local": "npm run switch:local && sequelize-cli db:migrate",
    "migrate:docker": "npm run switch:docker && docker exec -it user-service-user-service-1 npx sequelize-cli db:migrate",
    "test:local": "cross-env NODE_ENV=test npm run switch:local && npm test",
    "test:watch": "cross-env NODE_ENV=test jest --config jest.config.ts --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --config jest.config.ts --coverage",
    "test:clean": "cross-env NODE_ENV=test jest --runInBand --config jest.config.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "user-service",
    "express",
    "sequelize",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "description": "User service for managing users in the Creator Trends application.",
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "app-root-path": "^3.1.0",
    "bcrypt": "^5.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.8",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "jest": "^29.7.0",
    "mkdirp": "^3.0.1",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5"
  }
}
